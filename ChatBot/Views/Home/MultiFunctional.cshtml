@{
    ViewData["Title"] = "Ask";
}

<!-- Bootstrap Modal for Preview -->
<div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="previewModalLabel">
                    <i class="bi bi-eye"></i> Code Preview
                </h5>
                <div class="ms-auto me-3">
                    <span id="previewTechBadge" class="badge bg-info"></span>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div id="previewError" class="alert alert-warning m-3" style="display: none;"></div>
                <iframe id="previewFrame" style="width: 100%; height: 500px; border: none;"></iframe>
            </div>
            <div class="modal-footer">
                <div class="form-check form-switch me-auto">
                    <input class="form-check-input" type="checkbox" id="darkModePreview">
                    <label class="form-check-label" for="darkModePreview">Dark Mode</label>
                </div>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="openInNewTab()">
                    <i class="bi bi-box-arrow-up-right"></i> Open in New Tab
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Cannot Preview Modal -->
<div class="modal fade" id="cannotPreviewModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Preview Not Available
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="cannotPreviewMessage"></div>
                <div id="cannotPreviewSuggestions" class="mt-3"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Ask AI</h5>
            <div id="detectedTech" class="d-flex gap-2"></div>
        </div>
        <div class="card-body">
            <textarea class="form-control" id="prompt" rows="4" placeholder="Ask me anything... (Ctrl+Enter to send)"></textarea>
            <div class="mt-3 d-flex gap-2 flex-wrap">
                <button class="btn btn-primary" onclick="sendPrompt()">
                    <i class="bi bi-send"></i> Ask
                </button>
                <button class="btn btn-success" onclick="previewCode()" id="previewBtn" disabled>
                    <i class="bi bi-eye"></i> Preview
                </button>
                <div class="dropdown" id="previewOptionsDropdown" style="display: none;">
                    <button class="btn btn-outline-success dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-gear"></i> Preview Options
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="#" onclick="previewWithFramework('none')">
                                <i class="bi bi-file-code"></i> Plain HTML
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="previewWithFramework('none', ['bootstrap'])">
                                <i class="bi bi-bootstrap"></i> With Bootstrap 5
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="previewWithFramework('none', ['tailwind'])">
                                <i class="bi bi-wind"></i> With Tailwind CSS
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="previewWithFramework('react')">
                                <i class="bi bi-filetype-jsx"></i> React (JSX)
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="previewWithFramework('vue')">
                                <i class="bi bi-filetype-vue"></i> Vue.js
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="response" class="mt-4"></div>
</div>

